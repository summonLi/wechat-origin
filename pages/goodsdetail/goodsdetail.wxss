swiper {
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.goodsInfo {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.note {
  color: #929292;
  font-size: 22rpx;
  margin-top: 10rpx;
}

.goodsPrice {
  margin-top: 10rpx;
}

.price {
  color: #ff6700; 
  margin-right: 30rpx;
}

.originalPrice {
  text-decoration: line-through;
  font-size: 22rpx;
  color: #929292;
}

.shopCon {
  margin-bottom: 15rpx;
}

.shopLogo image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.shopInfo view {
  height: 45rpx;
  line-height: 45rpx;
  margin-top: 5rpx;
}

.collectShop,.goShop {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #eee;
  border-radius: 5px;
  margin-right: 20rpx;
}

.goShop {
  margin-right: 0;
}

.collectShop image,.goShop image {
  width: 35rpx;
  height: 35rpx;
  vertical-align: text-top;
  margin-right: 10rpx;
}

.goodsDetailBox {
  margin-bottom: 110rpx;
}

.detailTitle {
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  display: block;
  margin-bottom: 10rpx;
}

.detailImg image {
  width: 100%;
}

.bottomBtn { 
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.btnImgCm {
  height: 80rpx;
}

.btnImgCm image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}

.btnImgCm text {
  font-size: 20rpx;
  text-align: center;
  display: block;
  margin-top: 7rpx;
}

.cart {
  position: relative;
}

.cartNum {
  position: absolute;
  right: 30rpx;
  top: 3rpx;
  background: #ea3325;
  color: #fff;
  padding: 5rpx;
  min-width: 20rpx;
  height: 20rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 16rpx;
}

.addCart {
  background: #ff6700;
}

.buyNow { 
  background: #ea3325;
}

.btnCm {
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.goodsSpecifi {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  height: 70%;
  z-index: 11;
}

.specifiInfo {
  padding: 20rpx;
  position: relative;
}

.specifiImg {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.specifiImg image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.specifiPrice {
  color: #ff6700;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.specifiStock {
  color: #929292;
  margin-bottom: 10rpx;
}

.specifiBox {
  padding: 20rpx;
  border-bottom: 1px solid #f7f7f7;
}

.specifiT {
  padding: 0 0 20rpx 0;
}

.specifiList {
  overflow: hidden;
}
.specifiList text {
  box-sizing: border-box;
  border: 1px solid #f5f5f5; 
  float: left;
  margin-right: 20rpx;
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  color: #000;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
}
.specifiList .selectSpe {
  background: #fef2e9;
  border: 1px solid #ff6700; 
  color: #ff6700;
}
.buyNumBox {
  padding: 20rpx;
  overflow: hidden;
  border-bottom: 1px solid #f7f7f7;
}

.buyLeft {
  float: left;
  height: 60rpx;
  line-height: 60rpx;
}

.buyRight {
  float: right;
}

.quantityBox {
  height: 60rpx;
  border: 1px solid #eee;
}

.quantityBox text {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  vertical-align: top;
}

.quantityBox input {
  display: inline-block;
  width: 60rpx;
  max-width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  min-height:inherit;
  text-align: center;
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}

.quantityBox .disabled {
  color: #ccc;
}

.quantityBox .normal {
  color: #000;
}

.certainBtn {
  width: 96%;
  background: #ff6700;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
  position: absolute;
  bottom: 20rpx;
  left: 2%;
}

.closeBtn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 12;
}

.closeBtn image {
  width: 100%;
  height: 100%;
}






