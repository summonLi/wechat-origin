.container {
  overflow: hidden;
  background: #fff;
}

.classificationL {
  width: 25%;
  position: fixed;
  left: 0;
  height: 100%;
  overflow-y: scroll;
  background: #fff;
}

.classificationL view {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border-bottom: 1px solid #dfdfdf;
}

.classificationR {
  width: 75%;
  position: fixed;
  right: 0;
  height: 100%;
  background: #fff;
  overflow-y: scroll;
}

.classifyImgs {
  width: 100%;
  height: 250rpx;
  margin-bottom: 20rpx;
}

.classifyImgs image {
  width: 100%;
  height: 100%;
}

.classifyTit {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.classifyTit text {
  width: 40rpx;
  height: 2rpx;
  background: #ccc;
  display: inline-block;
  vertical-align: middle;
  margin: 0 20rpx;
}

.classifyCon {
  padding: 2%;
  overflow: hidden;
}
.classifyCon view {
  width: 30%;
  height: 200rpx;
  float: left;
  margin-left: 15rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.classifyCon image {
  width: 140rpx;
  height: 140rpx;
  display: block;
  margin: 0 auto;
}

.classifyCon text {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
}

.active { border-left: 2px solid #fa8814; color: #fa8814;}
