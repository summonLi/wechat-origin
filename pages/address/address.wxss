/* pages/address/address.wxss */
.address-list {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1px solid #f7f7f7;
}

.address-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.address-info {
  flex: 1;
}

.address-name {
  font-size: 32rpx;
}

.address-phone {
  color: #bababa;
}

.address-detail {
  color: #404040;
}

.address-edit {
  color: #ff6700;
  width: 80rpx;
  text-align: center;
  margin-left: 10rpx;
}

.address-add {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ff6700;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}

