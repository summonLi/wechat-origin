/**index.wxss**/
@import '/pages/template/template.wxss';
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.searchBox { 
  background: #fff;
  overflow: hidden;
}

.search {
  width: 94%;
  margin: 0 auto;
  border: 1px solid #f8f8f8;
  border-radius: 50rpx;
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.searchValue {
  float: left;
  width: 80%;
  padding-left: 5%;
  height: 60rpx;
}

.goSearch {
  float: right;
  width:15%;
}

.goSearch image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.banner {
  position: relative;
}

.dots {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #fff;
  color: 3a3a3a;
  text-align: center;
  border-radius: 50%;
  font: 300 18rpx/28rpx "microsoft yahei";
  margin: 0 8rpx;
}

.dots .dot.active {
  background: #f80;
  color: #fff;
}

.indexBanner {
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.indexBanner image {
  width: 100%;
  height: 100%;
}

.indexIcon {
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  padding: 20rpx 0;
}

.indexIcon view {
  width: 20%;
  float: left;
  text-align: center;
}

.indexIcon view image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.indexIcon view text {
  color: #666;
}

.indexCategory {
  overflow: hidden;
  margin-top: 20rpx;
  background: #fff;
  padding: 6rpx 0;
}

.indexCategory view {
  float: left;
  width: 49.5%;
  height: 480rpx;
}

.indexCategory view:nth-child(1) image {
  width: 100%;
  height: 480rpx;
}

.indexCategory view:nth-child(2) {
  height: 234rpx;
  margin-left: 1%;
  margin-bottom: 6rpx;
}

.indexCategory view:nth-child(2) image {
  width: 100%;
  height: 234rpx;
}

.indexCategory view:nth-child(3) {
  margin-bottom: 0;
  height: 240rpx;
  margin-left: 1%;
}

.indexCategory view:nth-child(3) image {
  width: 100%;
  height: 240rpx;
}

.indexImg {
  width: 100%;
  height: 450rpx;
  margin-top: 20rpx;
}

.indexImg image {
  width: 100%;
  height: 100%;
}

.indexPro {
  background: #fff;
  margin-top: 20rpx;
}

.proTitle {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  color: #ff6000;
  font-family: STKaiti;
  font-weight: bold;
}

.proBox {
  padding-left: 20rpx;
  height: 7.0rem;
  width: 100%;
  white-space: nowrap;
}

.proBox .pro {
  width: 180rpx;
  display: inline-block;
  text-align: center;
  margin-right: 20rpx;
}

.proBox .pro image {
  width: 100%;
  height: 180rpx;
  margin: 0 auto;
  display: block;
}

.proTxt {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #ff6000;
}

.txtThrough {
  color: #7c7c7c;
  font-size: 18rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.indexGoods {
  background: #fff;
  margin-top: 20rpx;
}

.indexGoods .goodsTitleImg {
  width: 100%;
  height: 400rpx;
  text-align: center;
  margin-bottom: 6rpx;
}

.indexGoods .goodsTitleImg image {
  width: 100%;
  height: 100%;
  display: block;
}

.goodsBox {
  overflow: hidden;
}

